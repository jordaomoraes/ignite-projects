generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid()) //declarando como chave primaria
  name          String
  email         String    @unique
  password_hash String    @default("")
  created_at    DateTime  @default(now())
  checkIns      CheckIN[] //coluna nao salva, por isso o KamelCase

  @@map("users")
}

model CheckIN {
  id           String    @id @default(uuid()) //declarando como chave primaria
  created_at   DateTime  @default(now())
  validated_at DateTime?

  user    User   @relation(fields: [user_id], references: [id]) //aqui Ã© criado o relacionamento, bastante colocar user User e salvar
  user_id String

  gym    Gym    @relation(fields: [gym_id], references: [id])
  gym_id String

  @@map("check_ins")
}

model Gym {
  id          String    @id @default(uuid()) //declarando como chave primaria
  title       String
  description String?
  phone       String?
  latitude    String
  longitude   String
  checkIns    CheckIN[]

  @@map("gyms")
}
